{
  "name": "flat-file-reader",
  "displayName": "Flat File Reader",
  "description": "Open and explore CSV, Parquet, and Excel files with a modern table UI inside VS Code.",
  "version": "0.0.1",
  "publisher": "MaheshG",
  "engines": {
    "vscode": "^1.84.0"
  },
  "icon": "media/icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:flatFileReader.open",
    "onLanguage:csv",
    "onCustomEditor:flatFileReader.viewer"
  ],
  "main": "out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flatFileReader.open",
        "title": "Open with Flat File Reader"
      }
    ],
    "customEditors": [
      {
        "viewType": "flatFileReader.viewer",
        "displayName": "Flat File Reader",
        "selector": [
          { "filenamePattern": "*.csv" },
          { "filenamePattern": "*.tsv" },
          { "filenamePattern": "*.parquet" },
          { "filenamePattern": "*.pq" },
          { "filenamePattern": "*.xlsx" },
          { "filenamePattern": "*.xls" }
        ],
        "priority": "default",
        "supportsMultipleEditorsPerDocument": false,
        "lifecycle": "default"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Flat File Reader",
      "properties": {}
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build && npm run build:webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "npm run compile",
    "build:webview": "npm run tailwind && node ./scripts/build-webview.mjs",
    "tailwind": "tailwindcss -c tailwind.config.cjs -i ./webview/src/index.css -o ./webview/dist/styles.css --minify",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/vscode": "^1.84.0",
    "autoprefixer": "^10.4.18",
    "esbuild": "^0.21.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "duckdb": "^0.10.0",
    "exceljs": "^4.4.0",
    "framer-motion": "^11.0.8",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
} 