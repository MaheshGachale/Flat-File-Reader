{
  "name": "flat-file-reader",
  "displayName": "Flat File Reader",
  "description": "Open and explore CSV, TSV, Parquet, Excel, JSON, and XML files with a modern table UI inside VS Code.",
  "version": "1.0.19",
  "publisher": "MaheshG",
  "engines": {
    "vscode": "^1.84.0"
  },
  "icon": "media/icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:flatFileReader.open",
    "onLanguage:csv",
    "onCustomEditor:flatFileReader.viewer",
    "onStartupFinished",
    "onFileSystem:file"
  ],
  "main": "out/extension.js",
  "binary": {
    "module_name": "duckdb",
    "module_path": "./node_modules/duckdb/lib/binding/",
    "host": "https://npm.duckdb.org/duckdb"
  },
  "contributes": {
    "commands": [
      {
        "command": "flatFileReader.open",
        "title": "Open with Flat File Reader"
      }
    ],
    "customEditors": [
      {
        "viewType": "flatFileReader.viewer",
        "displayName": "Flat File Reader",
        "selector": [
          {
            "filenamePattern": "*.csv"
          },
          {
            "filenamePattern": "*.tsv"
          },
          {
            "filenamePattern": "*.parquet"
          },
          {
            "filenamePattern": "*.pq"
          },
          {
            "filenamePattern": "*.xlsx"
          },
          {
            "filenamePattern": "*.xls"
          },
          {
            "filenamePattern": "*.json"
          },
          {
            "filenamePattern": "*.xml"
          }
        ],
        "priority": "default",
        "supportsMultipleEditorsPerDocument": false,
        "lifecycle": "default"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Flat File Reader",
      "properties": {}
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "npm run tailwind && node ./scripts/build.mjs",
    "build:webview": "npm run tailwind && node ./scripts/build-webview.mjs",
    "tailwind": "tailwindcss -c tailwind.config.cjs -i ./webview/src/index.css -o ./webview/dist/styles.css --minify",
    "package": "vsce package",
    "bundle": "esbuild src/extension.ts --bundle --platform=node --external:vscode --outfile=out/extension.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/vscode": "^1.84.0",
    "autoprefixer": "^10.4.18",
    "esbuild": "^0.21.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@mapbox/node-pre-gyp": "^2.0.3",
    "are-we-there-yet": "^4.0.2",
    "duckdb": "^0.10.2",
    "exceljs": "^4.4.0",
    "fast-csv": "^4.3.6",
    "fast-xml-parser": "^5.3.2",
    "framer-motion": "^11.0.8",
    "html2canvas": "^1.4.1",
    "inherits": "^2.0.4",
    "npmlog": "^7.0.1",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "readable-stream": "^4.7.0",
    "recharts": "^2.12.0",
    "safe-buffer": "^5.2.1",
    "string_decoder": "^1.3.0",
    "util-deprecate": "^1.0.2"
  }
}
